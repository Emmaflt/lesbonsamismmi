<h2>Modifier votre profil :</h2>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  
  <div class="form-floating">
     <%= f.text_field :username, autofocus: true, class: "form-control" %>
     <%= f.label :username %>
  </div>

  <br>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <%= f.label :email %>
  </div>

<br>

  <div class="form-floating">
     <%= f.text_field :avatar_url, autofocus: true, class: "form-control" %>
     <%= f.label :avatar_url %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>En attente de la confirmation de : <%= resource.unconfirmed_email %></div>
  <% end %>

  <br> <br>

  <i class="text-muted">(Ne mettez rien si vous ne voulez pas le changer)</i> 
  <% if @minimum_password_length %>
      <em class="text-muted"><%= @minimum_password_length %> Charactères minimums</em>
  <% end %>
  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <%= f.label :password %>
    
  </div>

  <br>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    <%= f.label :password_confirmation %>
  </div>

  <br> <br>

<i class="text-muted">(Nous avons besoin de votre mot de passe pour confirmer les modifications)</i>
  <div class="form-floating">
    <%= f.password_field :current_password, autocomplete: "Mot de passe actuel", class: "form-control" %>
    <%= f.label :current_password %>
  </div>

<br>

  <div class="actions">
    <%= f.submit "Mettre à jour", class: "w-45 btn btn-lg btn-primary" %>
  </div>
<% end %>

<br>

<a><%= link_to "Se déconnecter", destroy_user_session_path, :method => :delete, style:"color: light-blue;", class: "w-40 btn btn-lg btn-primary" %></a>
<br>
<h3 class="text-center">Supprimer mon compte :</h3>
<p class="text-center"> (attention la suppression de votre compte est définitive et il ne pourra être récupéré !)</p>

<p> <%= button_to "Suppression de mon compte", registration_path(resource_name), data: { confirm: "Êtes vous sur(e) de vouloir supprimer votre compte ?" }, method: :delete, class: "w-100 btn btn-lg btn-primary" %></p>
